#!/usr/bin/env node

var argv = require('minimist')(process.argv.slice(2), {
  '--': true,
  alias: {
    maxAttempts: 'max-attempts',
    logColor: 'log-color',
    protractorPath: 'protractor-path'
  }
});

argv.protractorArgs = argv['--'];
delete argv['--'];

var flake = require('../dist/index');

flake(argv, function (status) {
  process.exit(status);
});
